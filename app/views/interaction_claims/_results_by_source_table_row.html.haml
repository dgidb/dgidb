%tr
  %td
    - name_links = results_by_source_table_row.names.map do |(type, name)|
      - link_to(name, "/#{type}s/#{CGI::escape(name)}")
    = name_links.join(' and ').html_safe
  -results_by_source_table_row.sources.each do |in_source|
    %td
      -if in_source
        %i.icon-ok
          %p(style="display:none")true
      -else
        %i
          %p(style="display:none")false
  %td
    =results_by_source_table_row.sources.count {|in_source| in_source}
  %td
    =results_by_source_table_row.pmids.count
  %td
    =results_by_source_table_row.score